<div>
    <style scoped>
        .button-success,
        .button-error,
        .button-warning,
        .button-secondary {
            color: white;
            border-radius: 4px;
            text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
        }

        .button-success {
            background: rgb(28, 184, 65); /* this is a green */
        }

        .button-error {
            background: rgb(255, 255, 0); /* this is a maroon */
        }

        .button-warning {
            background: rgb(223, 117, 20); /* this is an orange */
        }

        .button-secondary {
            background: rgb(102, 255, 255); /* this is a light blue */
        }

    </style>
</div>
<%= form_for @localidad_partido, :html => {:class => 'pure-form pure-form-aligned'} do |f| %>

  <div class="pure-control-group">
    <%= label_tag(:localidad, "Localidad:") %>
    <%= f.text_field :localidad, :placeholder => 'Localidad', :class => 'pure-input-1-4'%>
  </div>
  <div class="pure-control-group">
    <%= label_tag(:partido, "Partido:") %>
    <%= f.text_field :partido, :placeholder => 'Partido', :class => 'pure-input-1-4'%>
  </div>
  
  <div class="actions">
    <%= f.submit 'Guardar Localidad y partido', :class=>'button-success pure-button' %>
  </div>

<% end %>
