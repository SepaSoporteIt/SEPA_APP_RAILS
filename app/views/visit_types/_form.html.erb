<div>
    <style scoped>

        .button-success,
        .button-error,
        .button-warning,
        .button-secondary {
            color: white;
            border-radius: 4px;
            text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
        }

        .button-success {
            background: rgb(28, 184, 65); /* this is a green */
        }

        .button-error {
            background: rgb(255, 255, 0); /* this is a maroon */
        }

        .button-warning {
            background: rgb(223, 117, 20); /* this is an orange */
        }

        .button-secondary {
            background: rgb(102, 204, 255); /* this is a light blue */
        }

    </style>
</div>
<%= form_for @visit_type, :html => {:class => 'pure-form pure-form-aligned'} do |f| %>
<%= field_set_tag 'Por favor complete los siguientes campos'  %>
  <% if visit_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(visit_type.errors.count, "error") %> prohibited this visit_type from being saved:</h2>

      <ul>
      <% visit_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="pure-control-group">
    <%= label_tag(:name, "Nombre:") %>
    <%= f.text_field :name, :placeholder => 'Nombre'%> 
    <%= label_tag(:description, "Descripcion:") %>
    <%= f.text_field :description, :placeholder => 'Descripcion'%>
  </div>

  <div class="pure-control-group">
    <label><%= link_to "Ambito", :controller => 'ambitos', :action => 'new' %></label>
    <%= select("visit_type", "ambit", Ambito.all.collect {|e| [ e.name, e.id ] }, { :prompt => 'Ambito' } , :class => 'pure-input-1-4')%>
    <label><%= link_to "Autoridad Legal", :controller => 'autoridads', :action => 'new' %></label>
    <%= select("visit_type", "authority", Autoridad.all.collect {|e| [ e.name, e.id ] }, { :prompt => 'Autoridad Legal' } , :class => 'pure-input-1-4')%>
  </div>

  <div class="pure-control-group">
    <label><%= link_to "Legislacion", :controller => 'legislacions', :action => 'new' %></label>
    <%= select("visit_type", "legislation", Legislacion.all.collect {|e| [ e.name, e.id ] }, { :prompt => 'Legislacion' } , :class => 'pure-input-1-4')%>
    <label><%= link_to "Solicitante Legal", :controller => 'solicitadors', :action => 'new' %></label>
    <%= select("visit_type", "aked_by", Solicitador.all.collect {|e| [ e.name, e.id ] }, { :prompt => 'Solicitante Legal' } , :class => 'pure-input-1-4')%>
  </div>

  <div class="actions">
    <%= f.submit 'Guardar Tarea', :class=>'button-success pure-button' %>
  </div>
<% end %>
