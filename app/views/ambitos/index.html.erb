<p id="notice"><%= notice %></p>

<h1>Ambitos</h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ambitos.each do |ambito| %>
      <tr>
        <td><%= ambito.name %></td>
        <td><%= link_to 'Ver Detalles', ambito %></td>
        <td><%= link_to 'Editar', edit_ambito_path(ambito) %></td>
        <td><%= link_to 'Eliminar', ambito, method: :delete, data: { confirm: 'Esta Ud Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Ambito', new_ambito_path %>
