<h1>Autoridades Legales</h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @autoridads.each do |autoridad| %>
      <tr>
        <td><%= autoridad.name %></td>
        <td><%= link_to 'Ver Detalles', autoridad %></td>
        <td><%= link_to 'Editar', edit_autoridad_path(autoridad) %></td>
        <td><%= link_to 'Eliminar', autoridad, method: :delete, data: { confirm: 'Esta Ud Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

