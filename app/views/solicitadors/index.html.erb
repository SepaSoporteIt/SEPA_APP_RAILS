<p id="notice"><%= notice %></p>

<h1>Solicitadores</h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solicitadors.each do |solicitador| %>
      <tr>
        <td><%= solicitador.name %></td>
        <td><%= link_to 'Ver Detalles', solicitador %></td>
        <td><%= link_to 'Editar', edit_solicitador_path(solicitador) %></td>
        <td><%= link_to 'Eliminar', solicitador, method: :delete, data: { confirm: 'Esta Ud Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

