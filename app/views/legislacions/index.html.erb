<p id="notice"><%= notice %></p>

<h1>Legislaciones</h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @legislacions.each do |legislacion| %>
      <tr>
        <td><%= legislacion.name %></td>
        <td><%= link_to 'Ver Detalles', legislacion %></td>
        <td><%= link_to 'Editar', edit_legislacion_path(legislacion) %></td>
        <td><%= link_to 'Eliminar', legislacion, method: :delete, data: { confirm: 'Esta Ud Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

